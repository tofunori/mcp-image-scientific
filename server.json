{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.tofunori/mcp-image-scientific",
  "description": "MCP server for publication-quality scientific figures â€” diagrams, charts, and maps with built-in QA validation. Powered by Gemini 2.0 Flash Image.",
  "vendor": "Thierry Nori",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/tofunori/mcp-image-scientific",
    "source": "github"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "npm",
      "registryBaseUrl": "https://registry.npmjs.org",
      "identifier": "mcp-image-scientific",
      "version": "1.0.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "GEMINI_API_KEY",
          "description": "Google Gemini API key for image generation (get from https://aistudio.google.com/apikey)",
          "isRequired": true,
          "format": "string",
          "isSecret": true
        },
        {
          "name": "IMAGE_OUTPUT_DIR",
          "description": "Absolute path to directory where generated images will be saved (defaults to ./output)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "SKIP_PROMPT_ENHANCEMENT",
          "description": "Set to 'true' to disable automatic prompt optimization and use direct prompts",
          "isRequired": false,
          "format": "boolean",
          "isSecret": false
        }
      ],
      "features": {
        "tools": {
          "supported": true,
          "list": [
            "generate_image"
          ]
        },
        "prompts": {
          "supported": false
        },
        "resources": {
          "supported": true
        }
      }
    }
  ],
  "tags": [
    "mcp",
    "mcp-server",
    "image-generation",
    "scientific-figures",
    "publication-quality",
    "scientific-diagram",
    "scientific-chart",
    "scientific-map",
    "data-visualization",
    "academic-publishing",
    "quality-assurance",
    "gemini",
    "google-ai",
    "typescript"
  ],
  "homepage": "https://github.com/tofunori/mcp-image-scientific",
  "documentation": "https://github.com/tofunori/mcp-image-scientific#readme"
}